        <!-- Main content -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Bugs</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th> UserId</th>
                                        <th>User Name</th>
                                        <th>User Email</th>
                                        <th>Issue Description</th>
                                        <th>Is Deleted</th>
                                        <th>Bug Creation Date</th>

                                    </tr>
                                    </thead>
                                    <tbody>
                                    <%Bugs.forEach(bug=>{%>
                                    <tr>
                                        <td data-gramm_editor="false" class="table-cell"><%=bug.id%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%=bug.UserId%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%=bug.User.Name%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%=bug.User.email%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%=bug.BugText%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%=bug.isDeleted%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%=bug.createdAt.toUTCString().slice(0,-12)%></td>
                                    </tr>
                                    <%})%>
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <th>ID</th>
                                        <th> UserId</th>
                                        <th>User Name</th>
                                        <th>User Email</th>
                                        <th>Issue Description</th>
                                        <th>Is Deleted</th>
                                        <th>Bug Creation Date</th>
                                    </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
