<section class="Add-Plan">
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="plan-info">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <h3 class="text-center">Create An Article</h3>
                            </div>
                        </div>
                        <form method="post" id="ArticleData" >

                            <div class="form-row">
                                <div class="col-12">
                                    <div class="Plan-Image-Edit"></div>

                                    <img src="/images/Tamrenak-Images/Plan-Virtaul.png" class="card-img-top plan-img"  id="plan-img" alt="...">
                                </div>
                                <div class="col-lg-12">

                                    <div class="md-form ">
                                        <input
                                                type="text"
                                                class="form-control"
                                                id="Title"
                                                maxlength="50"
                                                minlength="10"
                                                value="<%= typeof Name != 'undefined' ? Name:'' %>"

                                                required

                                        >
                                        <label for="Title">Article Title</label>
                                        <div class="Invalid" id="Invalid-Name">article title is too long</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="md-form">
                                        <input
                                                type="text"
                                                class="form-control"
                                                id="ArticleDescription"
                                                maxlength="50"
                                                minlength="10"
                                                required

                                        >
                                        <label for="ArticleDescription">Article Description</label>
                                        <div class="Invalid" id="Invalid-Description">article description is too long</div>

                                    </div>
                                </div>
                                <div class="col-md-6 Pimage-upload">
                                    <label for="file-upload" class="custom-file-upload">
                                        <i class="fa fa-cloud-upload"></i> Article Image
                                    </label>
                                    <input name="PImage" id="file-upload" type="file" accept="image/*"     onchange="   document.getElementById('ImageEdit').src = window.URL.createObjectURL(this.files[0])" >

                                </div>

                                <div class="col-12">
                                    <textarea id="summernote" name="new1"></textarea>
                                </div>
                                <div class="col-12 mt-3">
                                    <button class="btn btn-danger text-center" id="publish" >Publish</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-3"></div>



        </div>
    </div>
</section>
<div class="modal fade" id="PlanPhotoEdit" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Upload Plan Image</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <img id="ImageEdit" src="/images/ahmed.jpg">
                </div>
            </div>
            <div class="modal-footer">
                <button id="upload-btn"  class="btn btn-primary Plan-Edit-Save-btn" >Save</button>

                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
