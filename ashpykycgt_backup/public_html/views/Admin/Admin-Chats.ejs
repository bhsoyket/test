<body class="hold-transition sidebar-mini">
<div class="wrapper">

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="/" class="nav-link">Home</a>
            </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                    <i class="fas fa-expand-arrows-alt"></i>
                </a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->
    <% include ./SideBar.ejs%>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Chats & Messages</h1>
                    </div>
                    <div class="col-sm-6">
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Chats</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th> Client EMail</th>
                                        <th>User ID</th>
                                        <th>Bubble ID</th>
                                        <th>Client Name</th>
                                        <th>Client IP Address</th>
                                        <th>Client City</th>
                                        <th>Client Country</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <%Chats.forEach(chat=>{%>
                                    <tr>
                                        <td data-gramm_editor="false" class="table-cell"><%=chat.id%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%=chat.ClientEmail%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%=chat.HosterID%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%=chat.BubbleID%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%=chat.ClientName%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%=chat.ClientIPAddress%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%=chat.ClientCity%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%=chat.ClientCountry%></td>

                                    </tr>
                                    <%})%>
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <th>ID</th>
                                        <th> Client EMail</th>
                                        <th>User ID</th>
                                        <th>Bubble ID</th>
                                        <th>Client Name</th>
                                        <th>Client IP Address</th>
                                        <th>Client City</th>
                                        <th>Client Country</th>
                                    </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Messages</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table id="Messages" class="table table-bordered table-striped">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th> Receiver</th>
                                        <th>User ID</th>
                                        <th>Sender</th>
                                        <th>Bubble ID</th>
                                        <th>Message</th>
                                        <th>Read</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <%Messages.forEach(message=>{%>
                                    <tr>
                                        <td data-gramm_editor="false" class="table-cell"><%=message.id%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%=message.ReceiverID%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%=message.UserId%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%if(isNaN(message.SenderID)){%><%=message.Chat.ClientEmail%><%}else {%><%=message.SenderID%><%}%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%=message.BubbleID%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%=message.content%></td>
                                        <td data-gramm_editor="false" class="table-cell"><%=message.isRead%></td>


                                    </tr>
                                    <%})%>
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <th>ID</th>
                                        <th> Receiver</th>
                                        <th>User ID</th>
                                        <th>Sender</th>
                                        <th>Bubble ID</th>
                                        <th>Message</th>
                                        <th>Read</th>
                                    </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
        <div class="p-3">
            <h5>Title</h5>
            <p>Sidebar content</p>
        </div>
    </aside>
    <!-- /.control-sidebar -->

</div>
